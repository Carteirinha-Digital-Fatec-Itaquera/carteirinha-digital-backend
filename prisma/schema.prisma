generator client {
  provider = "prisma-client"
  moduleFormat = "cjs"
  output = "./generated/prisma"
}

datasource db {
  provider  = "postgresql"
}
        
model Student {
  ra        String @id
  course    String
  period    String
  status    String
  name      String
  admission String
  email     String @unique
  cpf       String @unique
  rg        String @unique
  qrcode    String?
  photo     String?
  birthDate DateTime
  dueDate   DateTime
  password  String?
}